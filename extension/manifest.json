{
  "manifest_version": 2,
  "name": "Media Global Keys",
  "version": "2025.1",
  "description": "Control Apple Music and Google meet with global shortcut keys",
  "browser_specific_settings": {
    "gecko": {
      "id": "mediaGlobalKeys@jantrid.net"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://music.apple.com/*",
        "https://meet.google.com/*",
        "https://app.zoom.us/*"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "permissions": ["nativeMessaging"],
  "web_accessible_resources": ["*.mp3"]
}
